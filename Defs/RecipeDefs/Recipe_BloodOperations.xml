<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>BloodTransfusion</defName>
    <label>Perform Blood Transfusion</label>
    <description>Replenished someone's blood supply.</description>
    <workerClass>RealMedicine.Operations.BloodTransfusion</workerClass>
    <jobString>BloodTransfusion</jobString>
    <workAmount>500</workAmount>
    <hideBodyPartNames>true</hideBodyPartNames>
    <isViolation>false</isViolation>
    <targetsBodyPart>false</targetsBodyPart>
    <anesthetize>false</anesthetize>
    <surgerySuccessChanceFactor>5</surgerySuccessChanceFactor>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>BloodBag</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>BloodBag</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>

  <RecipeDef>
    <defName>BloodDonation</defName>
    <label>Donate blood</label>
    <description>Take 25% of a pawns blood. Doctors say it is recomended to wait a day before doing it again.</description>
    <workerClass>RealMedicine.Operations.BloodDonation</workerClass>
    <jobString>BloodDonation</jobString>
    <workAmount>500</workAmount>
    <hideBodyPartNames>true</hideBodyPartNames>
    <isViolation>false</isViolation>
    <targetsBodyPart>false</targetsBodyPart>
    <anesthetize>false</anesthetize>
    <surgerySuccessChanceFactor>5</surgerySuccessChanceFactor>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>EmptyBag</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>EmptyBag</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>

</Defs>
